<CameraClient>:
    picture_op: picture
    server_op: server
    results_op: results
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            height: "40dp"
            size_hint_y: None
            Label:
                text: 'Recognizer'
                size_hint_x: .30
            TextInput:
                id: server
                hint_text: '1.1.1.1'
                size_hint_x: .45
            Button:
                text: "Set Server"
                size_hint_x: .25
                on_press: root.set_server()
        BoxLayout:
            padding: [20, 2, 20, 0]
            spacing: 5
            orientation: 'vertical'
            Button:
                text: 'Take Picture!'
                size_hint_y: .1
                on_press: root.do_capture()
            Image:
                id: picture
                allow_stretch: True
                source: ""
                size: 400, 400
                size_hint: None, None
            Button:
                text: 'Recognize'
                size_hint_y: .1
                on_press: root.send_image()
            Label:
                id: results
                text: 'Recognition Percentages'
                size_hint_y: .3
                text_size: self.width, None
                height: self.texture_size[1]

<MsgPopup>:
    size_hint: .7, .4
    title: "Attention"
    message_op: message

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 20

        Label:
            id: message
            size_hint_y: 0.4
            text: "Label"
        Button:
            text: 'OK'
            size_hint_y: 0.4
            on_press: root.dismiss()
            