<CameraClient>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: path_label
            text: 'Working Directory:'
            pos_hint: {'x': 0.25, 'y': 0.2}
            size_hint: 0.5, 0.1
        Button:
            text: 'Camera!'
            pos_hint: {'x': 0.25, 'y': .4}
            size_hint: 0.5, 0.1
            on_press: root.do_capture()

        Label:
            id: msg_label
            text: ''
            pos_hint: {'x': 0.25, 'y': 0.6}
            size_hint: 0.5, 0.1    
        Button:
            text: 'Analyze image'
            pos_hint: {'x': 0.25, 'y': .8}
            size_hint: 0.5, 0.1
            on_press: root.send_image()
        Label:
            id: results_label
            text: ''
            pos_hint: {'x': 0.25, 'y': 0.9}
            size_hint: 0.5, 0.1    


<MsgPopup>:
    size_hint: .7, .4
    title: "Attention"
    
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 20

        Label:
            id: message_label
            size_hint_y: 0.4
            text: "Label"
        Button:
            text: 'Dismiss'
            size_hint_y: 0.4
            on_press: root.dismiss()
            
